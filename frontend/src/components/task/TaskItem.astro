---
import { Icon } from "astro-icon/components";

const { id } = Astro.props;
---

<div
  class="flex justify-between px-2 pt-2 pb-2 rounded-lg group task-item hover:bg-white/30"
>
  <div class="flex items-center gap-3">
    <input type="checkbox" name="task-check" id="" />
    <span>Tarea 1</span>
  </div>

  <!-- Acciones -->
  <div class="flex gap-2 opacity-0 task-actions group-hover:opacity-100">
    <button>
      <Icon name="edit" class="text-xl text-black/80" />
    </button>
    <button><Icon name="delete" class="text-xl text-black/80" /></button>
  </div>
</div>
